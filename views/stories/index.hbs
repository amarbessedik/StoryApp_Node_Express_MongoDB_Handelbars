<h1>Stories</h1>
<div class="row">
    {{#each stories}}
      <div class="col s12 m4">
          <div class="card">
              <div class="card-image">
                  {{!--'user' is the user in stories '../user' is the logged-in user which means go up one level --}}
                  {{{editIcon user ../user _id}}}
              </div>
              <div class="card-content center-align">
                  <h5>{{title}}</h5>
                  <p class="left-align">{{stripTags (truncate body 145)}}</p>
                  <br>
                  <div class="chip">
                      <img src="{{user.image}}" alt="user image">
                      <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                  </div>
              </div>
              <div class="card-action center-align">
                  <a href="/stories/{{_id}}" class="btn blue">Read More</a>
              </div>
          </div>
      </div>
    {{else}}
       <p>No strories to display</p>
    {{/each}}
</div>